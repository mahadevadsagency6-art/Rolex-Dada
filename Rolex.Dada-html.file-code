      </div>
    </section>
  </main>

  <div class="modal-backdrop" id="modal-backdrop" role="dialog" aria-modal="true" aria-hidden="true" aria-labelledby="modal-title">
    <div class="modal" role="document" id="vip-modal">
      <button class="close-btn" id="close-modal" aria-label="Close dialog">✕</button>
      <h3 id="modal-title">CONFIRM PREMIUM ENTRY</h3>
      <p>You are about to access the most accurate free tips in the market. Click 'Proceed' below.</p>

      <div style="display:flex;gap:12px;align-items:center;justify-content:space-between;">
        <div style="flex:1">
          <small style="color:var(--muted);font-weight:600">Fast. Accurate. Free.</small>
        </div>
        <div class="actions">
          <button class="gold-btn" id="proceed-btn" onclick="location.href='https://t.me/+QEx--M5oDbljMzRl'">PROCEED TO TELEGRAM CHANNEL</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Minimal, efficient modal JS. Keeps performance high.
    (function(){
      const openBtn = document.getElementById('open-modal');
      const backdrop = document.getElementById('modal-backdrop');
      const closeBtn = document.getElementById('close-modal');
      const modal = document.getElementById('vip-modal');

      function showModal(){
        backdrop.classList.add('show'); // Use class for smooth transition
        backdrop.setAttribute('aria-hidden', 'false');
        setTimeout(()=> { modal.focus?.(); }, 60);
        document.documentElement.style.overflow = 'hidden';
        document.body.style.overflow = 'hidden';
      }

      function hideModal(){
        backdrop.classList.remove('show');
        backdrop.setAttribute('aria-hidden', 'true');
        document.documentElement.style.overflow = '';
        document.body.style.overflow = '';
        openBtn.focus();
      }

      openBtn.addEventListener('click', showModal);
      closeBtn.addEventListener('click', hideModal);

      // Close on backdrop click (but not when clicking inside modal)
      backdrop.addEventListener('click', function(e){
        if(e.target === backdrop) hideModal();
      });

      // keyboard accessibility: ESC to close
      document.addEventListener('keydown', function(e){
        if(e.key === 'Escape' && backdrop.classList.contains('show')){
          hideModal();
        }
      });

      // prevent tab-focus leaving modal (simple trap)
      document.addEventListener('focus', function(e){
        if (backdrop.classList.contains('show') && !modal.contains(e.target)){
          e.stopPropagation();
          modal.focus();
        }
      }, true);

      // small optimization: remove event listeners on unload
      window.addEventListener('unload', function(){
        openBtn.removeEventListener('click', showModal);
        closeBtn.removeEventListener('click', hideModal);
        backdrop.removeEventListener('click', hideModal);
        document.removeEventListener('keydown', hideModal);
      });
    })();
  </script>
</body>
</html>
